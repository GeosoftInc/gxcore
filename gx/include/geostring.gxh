//===========================================================================================================
//
// Class	
//
//-----------------------------------------------------------------------------------------------------------
// Description
//
// 
// The GEOSTRING class is used to read information stored in Geostring files (*.geosoft_string). Geosoft geostrings are 3D vector files that store digitized interpretations drawn on section maps. Both polygon and polyline features can be stored in the same file. This API currently only provides read access, but read/write support could be added in the future.
// 
//
//-----------------------------------------------------------------------------------------------------------



#ifndef GEOSTRING_GXH_DEFINED
#define GEOSTRING_GXH_DEFINED

//===========================================================================================================
//
// Define	GEOSTRING_OPEN
//
// Open Modes
//
// GEOSTRING_OPEN_READ
// GEOSTRING_OPEN_READWRITE
//
//===========================================================================================================

#define GEOSTRING_OPEN_READ         0
#define GEOSTRING_OPEN_READWRITE    1


//===========================================================================================================
//
// Define	SECTION_ORIENTATION
//
// Section orientation types
//
// SECTION_ORIENTATION_UNKNOWN
// SECTION_ORIENTATION_PLAN
// SECTION_ORIENTATION_SECTION
// SECTION_ORIENTATION_CROOKED
// SECTION_ORIENTATION_GMSYS
//
//===========================================================================================================

#define SECTION_ORIENTATION_UNKNOWN    0
#define SECTION_ORIENTATION_PLAN       1
#define SECTION_ORIENTATION_SECTION    2
#define SECTION_ORIENTATION_CROOKED    2
#define SECTION_ORIENTATION_GMSYS      2


//-----------------------------------------------------------------------------------------------------------
// Open_GEOSTRING   Open a Geostring file
//
// Returns          GEOSTRING Object
//
// Available        8.4.0
//

[_public] GEOSTRING
Open_GEOSTRING (
                string,  // Geostring file name
                int      // <define>GEOSTRING_OPEN</define>
                );


//-----------------------------------------------------------------------------------------------------------
// Destroy_GEOSTRING   Destroy the GEOSTRING Object.
//
// Returns             Nothing
//
// Available           8.4.0
//

[_public] void
Destroy_GEOSTRING (
                   GEOSTRING   // GEOSTRING Object
                   );


//-----------------------------------------------------------------------------------------------------------
// GetIPJ_GEOSTRING   Get the coordinate system of the Geostring.
//
// Returns            Nothing
//
// Available          8.4.0
//

[_public] void
GetIPJ_GEOSTRING (
                  GEOSTRING,  // GEOSTRING Object
                  IPJ         // IPJ in which to place the Geostring coordinate system
                  );


//-----------------------------------------------------------------------------------------------------------
// GetFeatures_GEOSTRING   Get the features
//
