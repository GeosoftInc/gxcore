//===========================================================================================================
//
// Class	
//
//-----------------------------------------------------------------------------------------------------------
// Description
//
// 
// This class allows access to the current default line patterns.
// It does not allow the definition of individual patterns. It is
// is used primarily with MAP class functions.
// 
//
//-----------------------------------------------------------------------------------------------------------



#ifndef LPT_GXH_DEFINED
#define LPT_GXH_DEFINED

//-----------------------------------------------------------------------------------------------------------
// Create_LPT   Creates a line pattern object with current default patterns.
//
// Returns      LPT Object
//
// Available    5.0.0
//

[_public] LPT
Create_LPT (
            );


//-----------------------------------------------------------------------------------------------------------
// Destroy_LPT   Destroys a line pattern object.
//
// Returns       Nothing
//
// Available     5.0.0
//

[_public] void
Destroy_LPT (
             LPT   // LPT Handle
             );


//-----------------------------------------------------------------------------------------------------------
// GetLST_LPT   Copies all pattern names into a LST object.
//
// Returns      Nothing
//
// Available    5.0.0
//

[_public] void
GetLST_LPT (
            LPT,  // LPT Handle
            LST   // LST Handle
            );


//-----------------------------------------------------------------------------------------------------------
// GetStandardLST_LPT   Copies the six standard line types into a LST object.
//
// Returns              Nothing
//
// Notes                The six standard line types are "solid", "long dash", "dotted", "short dash", "long, short dash" and "dash dot".
//
// Available            9.0
//

[_public] void
GetStandardLST_LPT (
                    LPT,  // LPT Handle
                    LST   // LST Handle
                    );





#endif

