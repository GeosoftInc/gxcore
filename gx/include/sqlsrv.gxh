[_licensed] int
iGetDatabaseLanguagesLST_SQLSRV (
                                 LST,     // LST
                                 string,  // SQL server to use
                                 string,  // User name
                                 string,  // Password
                                 int      // 0 - SQL authentication, 1 - NT integrated securty
                                 );


//-----------------------------------------------------------------------------------------------------------
