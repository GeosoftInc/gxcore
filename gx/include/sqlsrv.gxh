#ifndef SQLSRV_GXH_DEFINED
#define SQLSRV_GXH_DEFINED

//===========================================================================================================
//
// Define	MFCSQL_DRIVER
//
// SQL Server Driver
//
// MFCSQL_DRIVER_NOPROMPT            No dialog box, Error if authentication parameters are wrong
// MFCSQL_DRIVER_COMPLETE            Only shows dialog box if authentication parameters are wrong
// MFCSQL_DRIVER_PROMPT              Always show dialog box, with option to change parameter
// MFCSQL_DRIVER_COMPLETE_REQUIRED   Same as MFCSQL_DRIVER_COMPLETE except only missing parameters are editable
//
//===========================================================================================================

#define MFCSQL_DRIVER_NOPROMPT             0
#define MFCSQL_DRIVER_COMPLETE             1
#define MFCSQL_DRIVER_PROMPT               2
#define MFCSQL_DRIVER_COMPLETE_REQUIRED    3


//-----------------------------------------------------------------------------------------------------------
// iAttachMDF_SQLSRV   Attaches an MDF SQL server file to a server.
//
// Returns             0 - OK
//                     1 - DB Operation Canceled
//                     Terminates on Error
//
// Notes               The file's path need to be visible as local files on the server.
//                     Network drives and substitutes may not work.
//
// Available           5.1.8
//

[_licensed] int
iAttachMDF_SQLSRV (
                   string,  // SQL server to use
                   string,  // User name (if blank assume NT Integrated Security)
                   string,  // Password
                   string,  // DB name
                   string,  // MDF name
                   string   // LDF name (if blank, tries single db attach)
                   );


//-----------------------------------------------------------------------------------------------------------
// iDetachDB_SQLSRV   Detaches a SQL Server database from a server.
//
// Returns            0 - OK
//                    1 - DB Operation Canceled
//
// Available          5.1.8
//

[_licensed] int
iDetachDB_SQLSRV (
                  string,  // SQL server to use
                  string,  // User name (if blank assume NT Integrated Security)
                  string,  // Password
                  string   // DB name
                  );


//-----------------------------------------------------------------------------------------------------------
// iGetDatabaseLanguagesLST_SQLSRV   Get a list of the languages into LST
