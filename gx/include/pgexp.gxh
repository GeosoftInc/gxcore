//-----------------------------------------------------------------------------------------------------------
// Description
//
// The PGEXP class is similar to the EXP class, but is used
// to apply math expressions to pagers (PG objects).
// 
// It works only on PGs of the same dimensions.
//
//-----------------------------------------------------------------------------------------------------------



#ifndef PGEXP_GXH_DEFINED
#define PGEXP_GXH_DEFINED

//-----------------------------------------------------------------------------------------------------------
// AddPager_PGEXP   This method adds an pager to the PGEXP object with a
//                  variable name.
//
// Returns          Nothing
//
// Available        7.1.0
//

[_licensed] void
AddPager_PGEXP (
                PGEXP,   // PGEXP object
                PG,      // Pager to add
                string   // Variable name
                );


//-----------------------------------------------------------------------------------------------------------
// Create_PGEXP   This method creates an PGEXP object.
//
// Returns        PGEXP Object
//
// Available      7.1.0
//

[_licensed] PGEXP
Create_PGEXP (
              );


//-----------------------------------------------------------------------------------------------------------
// Destroy_PGEXP   This method destroys a PGEXP object.
//
// Returns         Nothing
//
// Available       7.1.0
//

[_public] void
Destroy_PGEXP (
               PGEXP   // Destroy a PGEXP object
               );


//-----------------------------------------------------------------------------------------------------------
// DoFormula_PGEXP   This method runs a formula on the pagers.
//
// Returns           Nothing
//
// Available         7.1.0
//

[_licensed] void
DoFormula_PGEXP (
                 PGEXP,   // PGEXP object
                 string,  // Formula
                 int      // Max. Buff size
                 );





#endif

